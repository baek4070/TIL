<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane 
fx:controller="login.RootController"
prefHeight="150.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <bottom>
      <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnLogin" mnemonicParsing="false" text="로그인" />
            <Button fx:id="btnJoin" mnemonicParsing="false" text="회원가입" />
            <Button fx:id="btnCancel" mnemonicParsing="false" text="취소" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
   <center>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER_LEFT" spacing="30.0">
               <children>
                  <Label text="아이디" />
                  <Label text="패스워드" />
               </children>
            </VBox>
            <VBox alignment="CENTER" spacing="20.0">
               <children>
                  <TextField fx:id="txtId" />
                  <PasswordField fx:id="txtPass" />
               </children>
            </VBox>
         </children>
      </HBox>
   </center>
</BorderPane>
